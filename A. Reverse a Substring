#include <bits/stdc++.h>
using namespace std;

using ll = long long;

void init_code() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);
}


void always424() {
    ll n; cin >> n;
    int ok = 0;
    string s; cin >> s;
    for(int i = 0;i<n-1;i++){
        if(s[i] > s[i+1]){
            cout << "YES\n";
            cout << i+1 <<" " << i+2;
            ok = 1;
            break;
        }
    }
    if(!ok)
    cout <<"NO\n";
}

int main() {
    init_code();
    // int t; cin >> t;
    // t= 0;
    // while(t--)
    always424();
}
